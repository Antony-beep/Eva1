<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EEEEEE"
    android:layout_margin="10dp"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistema de evaluación"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        />
    <Spinner
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/spinner_1"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prácticas Teóricas"
            android:textSize="25sp"
            android:id="@+id/textview0"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/textView1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Prácticas Teóricas"
            android:layout_below="@+id/textview0"
            android:textSize="22sp"/>
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/textView1.1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Otro"
            android:layout_below="@+id/textview0"
            android:layout_toRightOf="@+id/textView1"
            android:layout_marginLeft="80dp"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="134dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Práctica 1 :"
            android:layout_below="@+id/textView1"/>
        <EditText
            android:layout_below="@+id/textView1.1"
            android:layout_toRightOf="@+id/textView2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:hint="N1"
            android:inputType="number"
            android:id="@+id/edit_n1"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="134dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Práctica 2 :"
            android:layout_below="@+id/textView2"/>
        <EditText
            android:id="@+id/edit_n2"
            android:layout_below="@+id/edit_n1"
            android:layout_toRightOf="@+id/textView3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_marginLeft="150dp"
            android:hint="N2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prácticas Laboratorio"
            android:textSize="25sp"
            android:id="@+id/textview4"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/textView5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Prácticas de Laboratorio"
            android:layout_below="@+id/textview4"
            android:textSize="22sp"/>
        <TextView
            android:layout_marginTop="16dp"
            android:id="@+id/textView6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Otro"
            android:layout_below="@+id/textview4"
            android:layout_toRightOf="@+id/textView5"
            android:layout_marginLeft="30dp"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/textView7"
            android:layout_width="134dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Práctica 1 :"
            android:layout_below="@+id/textView5"/>
        <EditText
            android:layout_below="@+id/textView6"
            android:layout_toRightOf="@+id/textView7"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:inputType="number"
            android:hint="L1"
            android:id="@+id/edit_L1"/>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="134dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Práctica 2 :"
            android:layout_below="@+id/textView7"/>
        <EditText
            android:id="@+id/edit_L2"
            android:layout_below="@+id/edit_L1"
            android:layout_toRightOf="@+id/textView8"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:inputType="number"
            android:hint="L2"/>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="134dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Práctica 3 :"
            android:layout_below="@+id/textView8"/>
        <EditText
            android:id="@+id/edit_L3"
            android:layout_below="@+id/edit_L2"
            android:layout_toRightOf="@+id/textView8"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:inputType="number"
            android:hint="L3"/>
        <TextView
            android:id="@+id/textView10"
            android:layout_width="134dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Práctica 4 :"
            android:layout_below="@+id/textView9"/>
        <EditText
            android:id="@+id/edit_L4"
            android:layout_below="@+id/edit_L3"
            android:layout_toRightOf="@+id/textView8"
            android:layout_width="40dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="150dp"
            android:hint="L4"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/textview_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Estado del alumno"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="#FF0000"/>
    <TextView
        android:id="@+id/textview_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Spinner"
        android:gravity="center"
        android:textSize="22sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="evaluar"
        android:text="Calcular"
        android:background="@color/colorAccent"
        />
</LinearLayout>